<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/LightGrey">

        <EditText android:id="@+id/register_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textColorHighlight="@color/White"
            android:shadowColor="@color/White"
            android:textAlignment="center"
            android:textColorLink="@color/Red"
            android:hint="Adınız" />

        <EditText android:id="@+id/register_input_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textColorHighlight="@color/White"
            android:shadowColor="@color/White"
            android:textAlignment="center"
            android:textColorLink="@color/Red"
            android:hint="Soyadınız" />


        <!-- Email Label -->

        <EditText android:id="@+id/register_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/White"
            android:textColorHighlight="@color/White"
            android:shadowColor="@color/White"
            android:textAlignment="center"
            android:textColorLink="@color/Red"
            android:hint="Email" />


        <!-- Password Label -->

        <EditText android:id="@+id/register_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:hint="Şifre"/>
        <EditText android:id="@+id/register_input_tckimlik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textColorHighlight="@color/White"
            android:shadowColor="@color/White"
            android:textColorLink="@color/White"
            android:hint="T.C Kimlik"
            android:textAlignment="center"/>

        <EditText android:id="@+id/register_input_mobile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textColor="@color/White"
            android:textColorHighlight="@color/White"
            android:shadowColor="@color/White"
            android:textColorLink="@color/White"
            android:textAlignment="center"
            android:hint="Cep Telefonu Telefon Numarası"/>

        <EditText android:id="@+id/register_input_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textColorHighlight="@color/White"
            android:shadowColor="@color/White"
            android:textColorLink="@color/White"
            android:hint="Adres"
            android:textAlignment="center"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@color/White"
            android:padding="12dp"
            android:text="Üye Ol"
            android:textAlignment="center"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Zaten hesabınız var mı? Giriş yapın."
            android:textSize="16dip" />
        <TextView android:id="@+id/deneme_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Deneme"
            android:gravity="center"
            android:textSize="16dip"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>
</RelativeLayout>